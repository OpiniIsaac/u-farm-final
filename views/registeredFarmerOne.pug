doctype html
head
  title All Bookings and Orders
  link(rel='stylesheet' href='css/registeredFarmerOne.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')

header
  h1 Registered Farmer Ones
section
  table
    thead
      tr
        th Full Name
        th NIN
        th Phone Number
        th Gender
        th Date OF Birth 
        th Residence Type
        th ward
        th Unique ID
        th Activities
        th Directions 
        th Date Of Registration 
        th Period Of Stay
        th Action
    tbody
    if farmers.length
      each farmer in farmers
        tr
          td #{farmer.fullName}
          td #{farmer.nin}
          td #{farmer.phoneNumber}
          td #{farmer.gender}
          td #{farmer.dateOfBirth}
          td #{farmer.residenceType}
          td #{farmer.ward}
          td #{farmer.uniqueId}
          td #{farmer.activities}
          td #{farmer.directions}
          td #{farmer.dateOfRegistration}
          td #{farmer.periodOfStay}
          td 
                      a.btn.btn-dark.btn-block(href="/edit_FamerOne/"+farmer.id) Edit 
